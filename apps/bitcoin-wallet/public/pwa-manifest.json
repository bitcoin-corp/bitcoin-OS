    {
      "protocol": "web+bitcoin-wallet",
      "url": "/?action=%s"
    },
    {
      "protocol": "bitcoin",
      "url": "/?address=%s"
    }
  ],
  "categories": ["finance", "productivity"],
  "launch_handler": {
    "client_mode": "auto"
  },
