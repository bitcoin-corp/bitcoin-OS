{
  "short_name": "Bitcoin Wallet",
  "name": "Bitcoin Wallet",
  "description": "A non-custodial and open-source wallet for BSV and 1Sat Ordinals",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "any",
  "background_color": "#000000",
  "theme_color": "#f7931a",
